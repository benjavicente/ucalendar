<% unless @term.nil? %>
  <% provide :description, t('schedule_of', subjects_names: @courses.map(&:subject).map(&:name).to_sentence) %>
<% end %>

<%= tag.section class: 'schedule-section' do -%>
  <%= tag.div class: 'schedule-card' do -%>

    <%= tag.div class: 'tittle-box' do -%>
      <%= tag.h1 do -%>
        <%= t('schedule') -%>
        <%= select_tag :period, options_from_collection_for_select(Term.order(year: :desc, period: :asc), :to_s, :to_s, @term) -%>
      <% end %>
      <%= tag.p t('course_form_instrucions') -%>
    <% end %>

    <%= tag.form class: 'inputs', action: schedule_short_url, method: :get do -%>
      <% 6.times do  %>
        <%= tag.input name: 'cs[]', type: 'text', pattern: '[\w\d]{5,8}-\d+|\d{5,6}', maxlength: 12 -%>
      <% end %>
      <noscript>
        <%= tag.input type: 'submit' -%>
      </noscript>
    <% end %>

    <%= tag.div id: 'schedule_table_and_links', class: 'vl' do -%>
      <%= render partial: 'schedule/schedule_table_and_links'-%>
    <% end %>

  <% end %>
<% end %>

<%= render partial: 'github_corner' %>
